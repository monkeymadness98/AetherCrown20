# Application Configuration
APP_NAME=AetherCrown20
APP_ENV=development
DEBUG=True

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aethercrown
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (if using caching/sessions)
REDIS_URL=redis://localhost:6379/0

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET=your_paypal_secret_here
PAYPAL_MODE=sandbox  # sandbox or live

# Render Deployment Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=your_render_service_id_here

# Vercel Deployment Configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_vercel_project_id_here
VERCEL_ORG_ID=your_vercel_org_id_here

# API Keys for External Services
EXTERNAL_API_KEY=your_external_api_key_here

# Security Configuration
SECRET_KEY=your_secret_key_for_jwt_and_sessions_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-frontend.vercel.app

# Empire Automation Configuration
EMPIRE_AUTOMATION_ENABLED=True
EMPIRE_AUTOMATION_INTERVAL=3600  # in seconds
EMPIRE_LOCK_TIMEOUT=300  # in seconds

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Configuration (if sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password_here
EMAIL_FROM=noreply@aethercrown.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
FEATURE_PAYPAL_INTEGRATION=True
FEATURE_AUTO_DEPLOYMENT=True
FEATURE_EMPIRE_AUTOMATION=True

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id

# Healthchecks.io Configuration (Monitoring)
HEALTHCHECKS_PING_URL=https://hc-ping.com/your_unique_uuid_here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend.vercel.app
