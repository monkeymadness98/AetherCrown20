# AetherCrown20 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================
# ENVIRONMENT CONFIGURATION
# ============================================================
ENVIRONMENT=development  # development, staging, or production
NODE_ENV=development

# ============================================================
# APPLICATION URLS
# ============================================================
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================================
# DATABASE CONFIGURATION (Supabase)
# ============================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# ============================================================
# PAYMENT PROVIDERS
# ============================================================
# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_SECRET=your_paypal_secret_here
PAYPAL_MODE=sandbox  # sandbox or live

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================
# DEPLOYMENT SERVICES
# ============================================================
# Render Configuration
RENDER_API_KEY=your_render_api_key_here
RENDER_SERVICE_ID=srv-your_service_id_here

# Vercel Configuration
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=prj_your_project_id_here
VERCEL_ORG_ID=team_your_org_id_here

# ============================================================
# MONITORING & ANALYTICS
# ============================================================
# Sentry Configuration
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development

# Healthchecks.io or similar
HEALTHCHECKS_URL=https://hc-ping.com/your_unique_check_id

# ============================================================
# AUTHENTICATION & SECURITY
# ============================================================
SECRET_KEY=your_jwt_secret_key_here_use_long_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================
# EMAIL & NOTIFICATIONS
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_app_password_here
EMAIL_FROM=noreply@aethercrown.com

# ============================================================
# REDIS CONFIGURATION (if using caching/sessions)
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================================
# DATABASE CONFIGURATION (PostgreSQL - if not using Supabase)
# ============================================================
DATABASE_URL=postgresql://user:password@localhost:5432/aethercrown
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================
# API RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================
# FEATURE FLAGS
# ============================================================
FEATURE_PAYPAL_INTEGRATION=True
FEATURE_STRIPE_INTEGRATION=True
FEATURE_AUTO_DEPLOYMENT=True
FEATURE_EMPIRE_AUTOMATION=True

# ============================================================
# EMPIRE AUTOMATION CONFIGURATION
# ============================================================
EMPIRE_AUTOMATION_ENABLED=True
EMPIRE_AUTOMATION_INTERVAL=3600  # in seconds
EMPIRE_LOCK_TIMEOUT=300  # in seconds

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# ============================================================
# WEBHOOK CONFIGURATION
# ============================================================
WEBHOOK_SECRET=your_webhook_secret_here

# ============================================================
# AI AGENT CONFIGURATION
# ============================================================
AI_AGENT_ENABLED=True
AI_AGENT_SWEEP_INTERVAL=86400  # Daily sweep (in seconds)
AI_AGENT_AUTO_FIX=True
AI_AGENT_AUTO_DEPLOY=True

# ============================================================
# GITHUB INTEGRATION (for CI/CD)
# ============================================================
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_REPOSITORY=owner/repo

# ============================================================
# ADDITIONAL SERVICE CONFIGURATIONS
# ============================================================
# Add any additional service-specific environment variables below
